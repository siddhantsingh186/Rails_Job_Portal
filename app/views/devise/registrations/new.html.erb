<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name%><br/>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class = "field">
    <%= f.label :phone %><br/>
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :address_line_1%><br/>
    <%= f.text_field :address_line_1, autofocus: true, autocomplete: "address_line_1" %>
  </div>

  <div class="field">
    <%= f.label :address_line_2%><br/>
    <%= f.text_field :address_line_2, autofocus: true, autocomplete: "address_line_2" %>
  </div>

  <div class="field">
    <%= f.label :city%><br/>
    <%= f.text_field :city, autofocus: true, autocomplete: "city" %>
  </div>

  <div class ="field">
    <%= f.label :education%><br/>
    <%= f.text_field :education, autofocus: true, autocomplete: "education" %>
  </div>

  <div class ="field">
    <%= f.label :work_experience%><br/>
    <%= f.text_field :work_experience, autofocus: true, autocomplete: "work_experience" %>
  </div>

  <div class="field">
    <%= f.label :resume_link%><br/>
    <%= f.text_field :resume_link, autofocus: true, autocomplete: "resume_link" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
